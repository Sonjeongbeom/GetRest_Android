<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#f7f7f7"
        tools:context=".Fragment.HomeFragment">

    <include
            android:id="@+id/toolbar_home"
            layout="@layout/toolbar_home"/>

    <android.support.v4.widget.NestedScrollView
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <ImageView
                            android:id="@+id/img_home_top"
                            android:layout_alignParentTop="true"
                            android:background="@drawable/home_top_border"
                            android:layout_width="match_parent"
                            android:layout_height="155dp"/>
                    <LinearLayout
                            android:id="@+id/ll_home_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginLeft="35dp"
                            android:layout_marginTop="35dp">
                        <TextView
                                android:id="@+id/txt_home_name"
                                android:layout_alignParentTop="true"
                                android:text="김혜린"
                                android:textSize="25dp"
                                android:textColor="#ffffff"
                                android:textStyle="bold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        <TextView
                                android:layout_toRightOf="@+id/txt_home_name"
                                android:text="님의"
                                android:textSize="25dp"
                                android:textColor="#ffffff"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <TextView
                            android:id="@+id/txt_home_record"
                            android:layout_below="@+id/ll_home_name"
                            android:text="기록을 살펴 볼까요?"
                            android:textSize="25dp"
                            android:textColor="#ffffff"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="35dp"/>
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                <RelativeLayout
                        android:layout_marginTop="22dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/barChart"
                            android:layout_width="match_parent"
                            android:layout_height="142dp">
                    </com.github.mikephil.charting.charts.BarChart>
                </RelativeLayout>
                <LinearLayout
                        android:layout_marginHorizontal="16dp"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <TextView
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#1f315a"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="2016"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#1f315a"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="2017"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <TextView
                            android:textSize="15dp"
                            android:textStyle="bold"
                            android:textColor="#1f315a"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:text="2018"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                </LinearLayout>
                <RelativeLayout
                        android:layout_marginHorizontal="16dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:layout_marginTop="19dp">
                    <TextView
                            android:layout_centerVertical="true"
                            android:id="@+id/txt_home_year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2019"
                            android:textSize="17dp"
                            android:textColor="#1f315a"/>
                    <TextView
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="5dp"
                            android:id="@+id/txt_home_quarter"
                            android:layout_toRightOf="@+id/txt_home_year1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1분기"
                            android:textSize="17dp"
                            android:textColor="#1f315a"/>
                    <View
                            android:layout_toRightOf="@+id/txt_home_quarter"
                            android:layout_marginLeft="5dp"
                            android:layout_centerVertical="true"
                            android:layout_width="300dp"
                            android:layout_height="2dp"
                            android:background="#1f315a"/>
                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                        android:layout_marginHorizontal="16dp"
                        android:id="@+id/rv_home_product_overview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false">
                </android.support.v7.widget.RecyclerView>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:orientation="vertical">
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>
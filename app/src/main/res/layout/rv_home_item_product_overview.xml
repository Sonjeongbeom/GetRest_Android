<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <RelativeLayout
            android:id="@+id/ll_rv_home_item_product_overview_container"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="18dp"
            android:background="@drawable/home_product_border"
            android:elevation="3dp">
        <TextView
                android:id="@+id/txt_rv_home_item_product_overview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 이름"
                android:textSize="20sp"
                android:textColor="#1e305b"
                android:letterSpacing="0.06"
                android:lineSpacingExtra="9sp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"/>
        <TextView
                android:id="@+id/txt_rv_home_item_product_overview_period"
                android:layout_below="@+id/txt_rv_home_item_product_overview_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20XX.XX ~ 20XX.XX"
                android:textSize="12sp"
                android:textStyle="bold"
                android:letterSpacing="0.05"
                android:lineSpacingExtra="2sp"
                android:textColor="#1e305b"
                android:layout_marginLeft="16dp"/>
        <ImageView
                android:id="@+id/img_rv_home_item_product_overview"
                android:layout_alignParentRight="true"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="34dp"
                android:layout_marginRight="9dp"
                android:src="@drawable/portfolio_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:id="@+id/txt_rv_home_item_product_overview_tag"
                android:layout_below="@+id/txt_rv_home_item_product_overview_period"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#해시태그"
                android:textSize="12sp"
                android:textColor="#1e305b"
                android:letterSpacing="0.01"
                android:lineSpacingExtra="4sp"
                android:paddingVertical="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/home_tag_border"/>
    </RelativeLayout>
</RelativeLayout>
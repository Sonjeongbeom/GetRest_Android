<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.Signup1Activity">
    <include
            android:id="@+id/toolbar_signup1"
            layout="@layout/toolbar_signup1"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <LinearLayout
                android:layout_marginTop="33dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:layout_marginLeft="14dp"
                    android:text="쉬자를 시작하기 전"
                    android:textSize="17sp"
                    android:textColor="@color/colorMain4"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:layout_marginLeft="14dp"
                    android:text="회원님을 알아보기 위해 몇가지만 질문할게요"
                    android:textSize="17sp"
                    android:textColor="@color/colorMain4"
                    android:letterSpacing="0.03"
                    android:lineSpacingExtra="8sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
        <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="19dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="step1. 회원님은 누구인가요?"
                android:textSize="15sp"
                android:textColor="#999999"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="7sp"/>
        <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="사용자 이름"
                android:textSize="12sp"
                android:textColor="@color/colorMain4"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="6sp"/>
        <ImageView
                android:id="@+id/edt_signup1_name"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/textbox_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전화번호"
                android:textSize="12sp"
                android:textColor="@color/colorMain4"
                android:letterSpacing="0.02"
                android:lineSpacingExtra="6sp"/>
        <ImageView
                android:id="@+id/edt_signup1_phone_num"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="2dp"
                android:src="@drawable/textbox_call"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="13dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="성별"
                android:textSize="12sp"
                android:textColor="@color/colorMain4"
                android:lineSpacingExtra="6sp"
                android:letterSpacing="0.02"/>
        <RadioGroup
                android:layout_marginTop="5dp"
                android:layout_marginLeft="14dp"
                android:id="@+id/rdgrp_signup1_gender"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/rdbtn_signup1_male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="남자"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6sp"
                    android:letterSpacing="0.02"
                    android:layout_marginRight="31dp"/>
            <RadioButton
                    android:id="@+id/rdbtn_signup1_female"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="여자"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6sp"
                    android:letterSpacing="0.02"
                    android:layout_marginRight="62dp"/>
            <!--여기 marginRight dp값 바꿔보야요 원래 72dp-->
            <RadioButton
                    android:id="@+id/rdbtn_signup1_secret"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="알려주고 싶지 않아요"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6sp"
                    android:letterSpacing="0.02"/>
        </RadioGroup>
        <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="학력"
                android:textSize="12sp"
                android:textColor="@color/colorMain4"
                android:lineSpacingExtra="6sp"
                android:letterSpacing="0.02"/>
        <RadioGroup
                android:layout_marginLeft="14dp"
                android:id="@+id/rdgrp_signup1_edu_level"
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/rdbtn_signup1_highschool"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="고졸"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6sp"
                    android:letterSpacing="0.02"
                    android:layout_marginRight="31dp"/>
            <RadioButton
                    android:id="@+id/rdbtn_signup1_2years_univ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="초대졸"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6sp"
                    android:letterSpacing="0.02"
                    android:layout_marginRight="31dp"/>
            <RadioButton
                    android:id="@+id/rdbtn_signup1_4years_univ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="대졸"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6sp"
                    android:letterSpacing="0.02"
                    android:layout_marginRight="31dp"/>
            <RadioButton
                    android:id="@+id/rdbtn_signup1_master"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="석사이상"
                    android:textColor="#999999"
                    android:textSize="12sp"
                    android:lineSpacingExtra="6sp"
                    android:letterSpacing="0.02"/>
        </RadioGroup>

        <TextView
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일 주소"
                android:textSize="12sp"
                android:textColor="@color/colorMain4"
                android:lineSpacingExtra="6sp"
                android:letterSpacing="0.02"/>

        <EditText
                android:id="@+id/edt_signup1_email"
                android:textColorHint="#262626"
                android:lineSpacingExtra="6sp"
                android:textSize="13sp"
                android:letterSpacing="0.02"
                android:hint="정보 받아올 수 있으면 받아오는 쪽으로 @get rest.com"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="16dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        <Button
                android:id="@+id/btn_signup1_next"
                android:background="@drawable/signup_btn_next"
                android:gravity="center"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="52.5dp"
                android:layout_width="163dp"
                android:layout_height="35.9dp"
                android:text="다음으로"
                android:textSize="15sp"
                android:lineSpacingExtra="7sp"
                android:textColor="#ffffff"
                android:letterSpacing="0.01"/>
    </LinearLayout>


</LinearLayout>
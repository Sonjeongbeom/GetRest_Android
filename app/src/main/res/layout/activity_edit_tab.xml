<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".Activity.EditTabActivity"
        android:background="#0D000000">

    <include
            android:id="@+id/toolbar_portfolio"
            layout="@layout/toolbar_portfolio"/>

    <TextView
            android:id="@+id/txt_edit_tab_guideline"
            android:layout_below="@+id/toolbar_portfolio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="탭을 선택해 순서를 변경할 수 있습니다."
            android:textSize="17dp"
            android:textColor="#000000"
            android:layout_centerHorizontal="true"
            android:layout_marginVertical="20dp"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_edit_tab_list_overview"
            android:layout_below="@+id/txt_edit_tab_guideline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">
    </android.support.v7.widget.RecyclerView>

</RelativeLayout>